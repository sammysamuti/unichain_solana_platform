{
  "compilerOptions": {
    "target": "ES2019",
    "module": "CommonJS",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": [
    "src/**/*.ts",
    "src/types/fileTypes.ts",
    "src/app.ts",
    "src/utils/solana.ts"
  ],
  "exclude": ["node_modules"]
}
